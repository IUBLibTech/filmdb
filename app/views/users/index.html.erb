<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email Address</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Active?</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
	        <%= user.username %>
        </td>
        <td>
	        <%= user.email_address %>
        </td>
        <td>
	        <%= user.first_name %>
        </td>
        <td>
          <%= user.last_name %>
        </td>
        <td class="<%= user.active ? 'green' : 'red' %>">
          <%= user.active %>
        </td>
        <td>
        	<%= link_to 'Show', user %>
          <%= link_to 'Edit', edit_user_path(user) %>
          <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

