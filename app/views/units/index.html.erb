<p id="notice"><%= notice %></p>
<h1>Listing Units</h1>
<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @units.each do |unit| %>
    <tr>
      <td>
        <%= unit.name %>
      </td>
      <td>
        <%= link_to 'Show', unit %>
        <%= link_to 'Edit', edit_unit_path(unit) %>
        <%= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Unit', new_unit_path %>