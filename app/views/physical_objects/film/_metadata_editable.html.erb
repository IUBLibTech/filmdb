      <div>
        <%= f.text_area :research_value_notes %>
      </div>
    </div>
  </div>
  <div class="condition_types">
    <div id="condition_3">
      <div class="select _33">
        <div>AD Strip</div><%= f.select :ad_strip, options_for_select(@cv[:ad_strip], @physical_object.ad_strip), {include_blank: ''}  %>
      </div>
      <div class="select _33">
        <div>
          Shrinkage
        </div>
        <%= f.text_field :shrinkage %>
      </div>
      <div class="select _33">
        <div>Mold</div>
        <%= f.select :mold, options_for_select(@cv[:mold], @physical_object.mold), {include_blank: ''}  %>
      </div>
    </div>

    <div class="">
      <h4>Rated Conditions</h4>
      <%= f.fields_for :value_conditions do |vc| %>
        <div class="left condition">
          <%= vc.select :condition_type, options_for_select(@cv[:value_condition], vc.object.condition_type) %>
          <%= vc.select :value, options_for_select(@cv[:rated_condition_rating], vc.object.value) %>
          <div class="clear">
            <b>Comment</b>
            <%= vc.text_area :comment %>
          </div>
          <%= vc.link_to_remove (action_name == 'edit' ? 'Delete' : 'Cancel') %>
