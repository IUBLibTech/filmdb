    <h4>Boolean Conditions</h4>
    <%= f.fields_for :boolean_conditions do |bc| %>
      <div class="left condition">
        <%= bc.select :condition_type, options_for_select(@cv[:boolean_condition], bc.object.condition_type) %>
        <div class="clear">
          <b>Comment</b>
          <%= bc.text_area :comment %>
        </div>
        <%= bc.link_to_remove (action_name == 'edit' ? 'Delete' : 'Cancel') %>
      </div>
    <% end %>
    <%= f.link_to_add 'New Boolean Condition', :boolean_conditions %>
  </div>

  <div class="clear">
    <b class="block">Missing Footage</b>
    <%= f.text_area :missing_footage, class: '_100' %><br/>
    <b class="block"> Miscellaneous</b>
    <%= f.text_area :miscellaneous, class: '_100' %>
  </div>
</div>
