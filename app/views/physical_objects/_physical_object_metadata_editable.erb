<div id="core_metadata" class="metadata_section">
  <h4>Core Metadata</h4>
  <div class="left _50">
    <div class="label"><b>Title</b></div>
    <div class="field">
      <% if @title %>
          <%= @title.title_text %>
      <% else %>
          <%= f.text_field :title_text %>
      <% end %>
      <%= f.hidden_field :title_id %>
    </div>
    <div class="label"><b>Alternative Title</b></div>
    <div class="field"><%= f.text_field :alternative_title %></div>
    <div class="label">
      <b>Series</b>
    </div>
    <div class="field">
      <% if @series %>
          <%= @series.title %><br/>
          <%= f.hidden_field :series_id, value: @series.id  %>
    <% else %>
          <%= f.hidden_field :series_id %>
          <%= f.text_field :series_title_text %>
    <% end %>
    </div>
    <div class="label">
      <b>Series Part</b>
    </div>
    <div class="field">
      <%= f.text_field :series_part %>
    </div>
    <div class="label">
      <b>Media Type</b>
    </div>
    <div class="field">
      <%= f.select :media_type, @physical_object.media_types, {}, {id: 'media_type'} %>
    </div>
    <div class="label"><b>Medium</b></div>
    <div class="field"><%= f.select :medium, PhysicalObject::MEDIA_TYPE_MEDIUMS['Moving Image'], {}, {id: 'medium_types'} %></div>
  </div>
  <div class="left _50">
    <div class="label">
      <b>Unit</b>
    </div>
    <div class="field">
      <%= f.collection_select :unit_id, Unit.order('menu_index').all, :id, :abbreviation %>
    </div>
    <div class="label">
      <b>Collection</b>
    </div>
    <div class="field">
      <% if @collection %>
          <%= @collection.name %>
      <% else %>
          <%= f.text_field :collection_text%>
      <% end %>
      <%= f.hidden_field :collection_id %>
    </div>
    <div class="label">
      <b>Current Location</b>
    </div>
    <div class="field">
      <%= f.select :location, options_for_select(@cv[:location]) %>
    </div>
    <div class="label">
