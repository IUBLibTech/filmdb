      <%= f.text_field :iu_barcode %>
    </div>
    <div class="label">
      <b>MDPI Barcode</b>
    </div>
    <div class="field">
      <%= f.text_field :mdpi_barcode %>
    </div>
    <div class="label">
      <b>IUCAT Title No.</b>
    </div>
    <div class="field">
      <%= f.text_field :title_control_number %>
    </div>
