<%= link_to 'Back', title_path(@component_group.title) %>
<h2 class="title" id="<%= @title.id %>">Editing Component Group for <b><i><%= @component_group.title.title_text %></i></b></h2>
<% if @active %>
  <div class="warning m_bottom_10px">
    This component group is in active workflow. Physical Objects can only be added to it, not removed from it.
  </div>
<% end %>
<h4>Physical Objects</h4>
<table>
  <tbody>
  <tr>
    <th>IU Barcode</th>
    <th>Gauge</th>
    <th>Generation</th>
    <th>Location</th>
    <th>Digitized</th>
  </tr>
  <% @title.physical_objects.each do |p| %>
  <% p = p.specific %>
    <tr class=<%= "digitized_tr" if p.digitized? %>>
      <td><%= p.iu_barcode %></td>
      <td><%= p.has_attribute?(:gauge) ? p.gauge : '' %></td>
      <td><%= p.generations_text %></td>
      <td><%= p.current_location %></td>
      <td><%= p.digitized? ? 'Yes' : 'No' %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= render 'new_form' %>
