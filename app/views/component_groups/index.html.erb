<p id="notice"><%= notice %></p>

<h1>Listing Component Groups</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @component_groups.each do |component_group| %>
      <tr>
        <td><%= link_to 'Show', component_group %></td>
        <td><%= link_to 'Edit', edit_component_group_path(component_group) %></td>
        <td><%= link_to 'Destroy', component_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

