<% if @physical_objects.size > 0 %>
<h4 class="m_top_10px">Physical Objects</h4>
<p class="warning">
	<i>Select physical objects below to add to a new component group.
		<ul>
			<li>Physical objects in active workflow that are not selected will be marked returned to storage.</li>
			<li>If a Reformating (MDPI) component group is created, selected items will be marked as being on the Digitization Staging shelf (2k/4k).</li>
			<li>If a Best Copy MDPI component	group is created, all physical objects currently in storage will be queued for a pull request (you must still request those objects though).</li>
		</ul>
	</i>
</p>
<table id="po_table">
	<tbody>
	<tr>
		<th>Title</th>
		<th>Location</th>
		<th>IU Barode</th>
		<th>Can Size</th>
		<th>Gauge</th>
		<th>Generation</th>
		<th></th>
	</tr>
	<% @physical_objects.each do |p| %>
	<tr class="<%= p.active_component_group.nil? ? 'storage' : 'active'  %>">
		<td>
			<%= p.titles_text %>
		</td>
		<td>
			<%= p.current_workflow_status.status_name %>
		</td>
		<td>
			<%= p.iu_barcode %>
		</td>
		<td>
			<%= p.can_size %>
		</td>
		<td>
			<%= p.gauge %>
		</td>
		<td>
			<%= p.humanize_boolean_fields(PhysicalObject::GENERATION_FIELDS) %>
		</td>
		<td>
			<%= check_box_tag "po_#{p.id}", "po_#{p.id}", false,  class: 'po_check' %>
		</td>
	</tr>
	<% end %>
	<tr>
		<td colspan="7">
			<h4>Create Merged Component group</h4>
			<div id="cg_attributes_form" class="boxsizingBorder">
				<div><b>Group Type: </b><%= select_tag :group_type, options_for_select(@component_group_cv[:group_type]) %></div>
				<div>
					<b>Scan Resolution: </b>2k <%= check_box_tag '2k', '2k', true, class: 'mutually_exclusive' %> | 4k <%= check_box_tag '4k', '4k', false, class: 'mutually_exclusive' %> | 5k <%= check_box_tag '5k', '5k', false, class: 'mutually_exclusive' %> | HD <%= check_box_tag 'HD', 'HD', false, class: 'mutually_exclusive' %>
					<b>Color Space: </b><%= select_tag :color_space, options_for_select(ComponentGroup::COLOR_SPACES.collect{ |cs| [cs,cs]}, 'Linear 10 bit') %>
					<br>
					<b>Clean: </b><%= select_tag :clean, options_for_select([['Yes', 'Yes'],['No', 'No'],['Hand clean only', 'Hand clean only']]) %>
					<b>Return on Reel: </b><%= select_tag :return_on_reel, options_for_select([['Yes', 'Yes'],['No', 'No']], 'No') %>
				</div>
				<div>
					<b class="block">Group Summary</b>
					<%= text_area_tag :group_summary %>
				</div>
			</div>
		</td>
	</tr>
	</tbody>
</table>
<% end %>
