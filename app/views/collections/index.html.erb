<%= link_to 'New Collection', new_collection_path %>
<h1>Listing Collections</h1>
<table>
  <thead>
    <tr>
      <th>Collection Name</th>
      <th>Unit Abrreviation</th>
      <th>Unit</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @collections.each do |collection| %>
      <tr>
        <td><%= collection.name %></td>
        <td><%= collection.unit.abbreviation unless collection.unit.nil? %></td>
        <td><%= collection.unit.name unless collection.unit.nil? %></td>
        <td>
        	<%= link_to 'Show', collection %><br/>
					<%= link_to 'Edit', edit_collection_path(collection) %><br/>
	        <% if policy(Collection).destroy?  %>
		        <%= link_to 'Destroy', collection, method: :delete, data: { confirm: 'Are you sure?' } %><br/>
	        <% end %>
          <%= link_to 'Inventory', collection_new_physical_object_path(collection) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
